# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_DEPLOYMENT=gpt-5.1-chat
AZURE_OPENAI_API_VERSION=2025-01-01-preview

# ElevenLabs API Key (required for voice generation / audio production)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Default LLM provider
DEFAULT_LLM_PROVIDER=azure_openai

# Authentication (optional for local dev, required for production)
# Leave blank to disable auth (open access for local development)
LOGIN_USERNAME=
LOGIN_PASSWORD=
JWT_SECRET=change-me-to-a-random-string

# CORS allowed origins (comma-separated, default * for local dev)
ALLOWED_ORIGINS=*

# Backend URL (used by frontend in production)
BACKEND_URL=http://localhost:8000
